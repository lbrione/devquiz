</Layout>




<style>
  @keyframes hide-elem {
    20% {
      transform: translateY(50px);
    }
    100% {
      transform: translateY(-200%);
      opacity: 0;
      display: none;
    }
  }

  @keyframes show-elem {
    0% {
      transform: translateY(-200%);
      opacity: 0;
    }
    80% {
      transform: translateY(50px);
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes show-up {
    0% {
      transform: translateY(100%);
      opacity: 0;
    }

    50% {
      transform: translateY(-50px);
    }

    100% {
      ransform: translateY(0);
      opacity: 1;
    }
  }
</style>

